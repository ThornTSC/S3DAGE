	Renderer.drawCustomSprite("whitescreen", 0, 0, 0x00, SPRITE_FLAG_PRIO, 0xdfff, 0, alpha + 0x00480000, 0x10000)
	if (TA_menu_selection < 3)
	{
		Renderer.drawCustomSprite(stringformat("flicky_ta_retry_%x", TA_menu_selection), getScreenWidth()/2, getScreenHeight()/2 - 16, 0, SPRITE_FLAG_PRIO, 0xe001, 0, 255)
