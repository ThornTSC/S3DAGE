function void Flicky.TotalStars(u16 starCount, u16 x_offset, u16 y_offset, u16 spriteFlags, u16 renderQueue)
{
	Renderer.drawCustomSprite("star_red", getScreenExtend() - 40 + 170 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)
	Renderer.drawCustomSprite("star_gold", getScreenExtend() - 40 + 180 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)
	Renderer.drawCustomSprite("star_silver", getScreenExtend() - 40 + 190 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)
	Renderer.drawCustomSprite("star_bronze", getScreenExtend() - 40 + 200 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)
	Renderer.drawCustomSprite("star_special", getScreenExtend() - 40 + 210 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)
	Renderer.drawCustomSprite("flicky_text_totalmedals", getScreenExtend() - 40 + 123 + 82 + x_offset, 213 + 4 + y_offset, 0, spriteFlags, renderQueue)
	if (starCount / 100 != 0)
	{
		Renderer.drawCustomSprite(stringformat("flicky_smalldigit_%d", starCount / 100), getScreenExtend() - 40 + 229 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)	// non-zero hundreds
		Renderer.drawCustomSprite(stringformat("flicky_smalldigit_%d", (starCount / 10) % 10), getScreenExtend() - 40 + 237 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)	// tens (even if 0)
	}
	else if ((starCount / 10) % 10 != 0)
		Renderer.drawCustomSprite(stringformat("flicky_smalldigit_%d", (starCount / 10) % 10), getScreenExtend() - 40 + 237 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue) // non-zero tens
	
	Renderer.drawCustomSprite(stringformat("flicky_smalldigit_%d", starCount % 10), getScreenExtend() - 40 + 245 + x_offset, 213 + y_offset, 0, spriteFlags, renderQueue)	// ones (even if 0)
}

function void Flicky.TitleCard.TextElement.Update()
{
	A1 = 0xffff0000 + u16[A0 + 0x48]
	D0 = u16[A1 + 0x32]
	if (D0.u16 != 0)
	{
		if (!(objA0.render_flags & render_flag.VISIBLE))
		{
			--u16[A1 + 0x30]
			UnloadObject()
			return
		}

		if (D0.u16 == 1 && objA0.animation.sprite >= 0x04 && objA0.animation.sprite <= 0x14 && musicDelay)	// release the musicDelay as soon as the palette fade in is over
		{
			playMusic(level.default_music)
			musicDelay = false
		}

		// We add 0x40 here for title cards outside of act transitions to keep the text on screen longer, as the act number takes longer to show than in other themes due to the global tint.
		// We also drastically slow the rate at which text leaves.
		u8 textHoldTime = (u8[A1 + 0x3e]) ? u8[A0 + 0x28] : u8[A0 + 0x28] + 0x40
		if (D0.u8 >= textHoldTime)
		{
			objA0.position.x.u16 += (objA0.animation.sprite == 0x03) ? 0x04 : 0x20		// adds 0x20 in x position when moving out normally
			u32 timeToEndTitleCard = 0x0000012a		// time at 320px screen width that other title cards end
			if (getScreenWidth() >= 336)				// it takes longer to end at higher screen widths as the text travels farther
				timeToEndTitleCard++
			if (getScreenWidth() >= 400)				// it takes longer to end at higher screen widths as the text travels farther
				timeToEndTitleCard++
			if (getScreenWidth() >= 464)				// it takes longer to end at higher screen widths as the text travels farther
				timeToEndTitleCard++
			if (timer.alldata == timeToEndTitleCard && u8[A1 + 0x3e])	// time that other themes have removed text and ended the title card in an act transition.
			{
				level.results_done = 0xff
				// This should be unneeded now that PLCs are handled much earlier, when D0.u16 == 1
//				if (global.zone_act != 0x1700)
//				{
//					fn02f77c()
//					StartLoadingPatternsForZone()
//				}
			}
		}
	}
	else
	{
		// Appearing or showing. The rate at which text elements enter is 25% of the rate of movement in other themes.
		// We thus set the theme to cover 25% of the distance for the relevant object, which is still off screen in screen widths between 320px and 496px.
		if (objA0.position.x.u16 > u16[A0 + 0x46])
		{
			if (objA0.animation.sprite == 0x03 && !objA0.value32)
			{
				objA0.value32 = 1
				u16 zoneTextFinalPosition = getScreenExtend() + 380
				objA0.position.x.u16 = zoneTextFinalPosition + (objA0.position.x.u16 - zoneTextFinalPosition)/4
			}
			objA0.position.x.u16 = max(objA0.position.x.u16 - ((objA0.animation.sprite == 0x03) ? 0x04 : 0x10), u16[A0 + 0x46])		// subtracts 0x10 in x position when moving in normally
			u8[A1 + 0x34] = 0xff
		}
	}
	DrawObject()
}


