		}
		return
	}
	else
	{
		--u16[A0 + 0x30]
		if (u16[A0 + 0x30] == 0)
		{
			++objA0.subtype2c
			playSound(0xc0)
			return
		}
	}

	A1 = A0 + 0x34
	D0.u16 = u16[A0 + 0x30]
	D0.u8 >>= 2
	D0.u8 &= 0x01
	u16[(A1+=2)-2] = D0.u16
	D0.u8 ^= 0x01
	u16[(A1+=2)-2] = D0.u16
	D0.u8 ^= 0x01
	u16[(A1+=2)-2] = D0.u16
	D0.u8 ^= 0x01
	u16[(A1+=2)-2] = D0.u16
