		u32[0xfffffc50] = 0x0EE004C2
		u32[0xfffffc54] = 0x04820460
		u32[0xfffffc58] = 0x0408040C
		u32[0xfffffc5c] = 0x004206A0
		
		u32[0xfffffc60] = 0x00000CEE
