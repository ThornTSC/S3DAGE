	// Fix for CNZ1 miniboss altering Ring palette, #contributed by TheMushrunt
	if ((objA0.update_address == 0x06da24 && objA0.base_state < 0x06) && global.zone_act == 0x0300 && !original_mode)
		return
#endif
	if (u8[0xfffffabf] != 0)
		return

	A1 = 0xfffffade
	while (u16[A1] != 0)
	{
		--u8[A1 + 2]
		if (s8[A1 + 2] < 0)
		{
			A2 = u32[A1 + 4]
			A3 = 0xffff0000 + u16[A2]
			A4 = A2 + u16[A1]
			D1.u16 = u16[A4]
			if (D1.s16 < 0)
			{
				if (fn0859ce())
				{
					A1 += 8
					continue
				}
			}

			D2 = u8[A2 + 2]
			while (D2.s16 >= 0)
			{
				u16[A3] = u16[A4]
				A3 += 2
				A4 += 2
				--D2.s16
			}

			u8[A1 + 2] = u16[A4]
			A4 += 2
			D0 = A4 - A2
			u16[A1] = D0.u16
		}
		A1 += 8
	}
}






