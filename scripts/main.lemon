	else
		Renderer.setScreenSize(400, 224)
	*/

	original_mode = 0
	time_attack = 0
	Renderer.setScreenSize(400, 224)

	playMusic(MUSIC_CTRL_FADEOUT)
	kosinski.queue_size = 0

	zeroMemory(0xffffff10, 0x6c)

	ClearPatternLoadingQueue()
	global.zone_act = 0
	FadeOutScreenBlocking()
	set_status_register(0x2700)

