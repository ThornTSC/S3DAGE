		u8[A2 + 0x2e] = 0				// correctly set
		u8[A2 + 0x2a] |= 0x02			// correctly set
		u8[A2 + 0x20] = 0				// correctly set
		objA0.s2objoff32.u16 = 0
	}
	u8[A0 + 0x37] = 0x20
	u8[A0 + 0x31] = 0
	u8[A0 + 0x38] = 0
