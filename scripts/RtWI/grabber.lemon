	objA0.s2objoff2b.u8 = 0x10
	u8[A0 + 0x37] = 0x20
}

function bool Grabber.checkGrabbingInstaShield(u32 charAddress)
{
	// New: check if the player character is using the Insta-Shield. If so, do not grab the player character.
	u32 backupA0 = A0
	A0 = charAddress	// place character object address in A0 to facilitate char.xxx definitions
	bool hasInstaShield = false
	if (Game.getSetting(SETTING_INSTA_SHIELD) || original_mode || time_attack)
	{
		if (char.character == CHARACTER_SONIC && (char.bonus_effect & (char.bonus.ALL_SHIELDS | char.bonus.INVINCIBLE)) == 0)
		{
			hasInstaShield = (char.double_jump_state == 1)
		}
	}
	A0 = backupA0	// restore current object to A0
	return hasInstaShield
}

