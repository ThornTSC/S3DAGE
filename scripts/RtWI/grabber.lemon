		--objA0.s2objoff2b.u8
		if (objA0.s2objoff2b.u8 == 0)
		{
			Grabber.Explode()
			return
		}
		u8[A0 + 0x0a] ^= 0x20		// correctly set as the upper byte of objA0.sprite_attributes
	}
}

