	A1 = 0xffff0000 + objA0.s2objoff34.u16
	D0.u16 = u16[A1]
	if (u8[A0 + 0x31] != 0)
	{
		--u8[A0 + 0x37]
		if (u8[A0 + 0x37] == 0)
		{
			fn0390fa()
			return
		}
		D1.u8 = u8[A0 + 0x36]
		D0.u8 &= 0x0c
		if (D0.u8 != 0)
		{
			if (D0.u8 != D1.u8)
			{
				u8[A0 + 0x36] = D0.u8
				++u8[A0 + 0x38]
			}
		}
		return
	}
	D0.u8 &= 0x0c
	if (D0.u8 == 0)
	{
		return
	}
	u8[A0 + 0x31] = 0xff
	u8[A0 + 0x36] = D0.u8
	return
}

