//# address-hook(0x0367aa) end(0x0367ce)
function void S2.InheritParentXYFlip()
{
	D0.u8 = objA0.render_flags & 0xfc
	D2.u8 = objA0.flags2a & 0xfc
	D1.u8 = objA1.render_flags & 0x03
	D0.u8 |= D1.u8
